    <h1>üì∂ TestMyNet</h1>
    <p>Check your internet speed easily üêæ</p>
    <button onclick="checkSpeed()">Check Speed</button>
    <p id="result"></p>

    <script>
      async function checkSpeed() {
        const startTime = new Date().getTime();
        const response = await fetch("https://upload.wikimedia.org/wikipedia/commons/3/3f/Fronalpstock_big.jpg?cache=" + Math.random());
        const endTime = new Date().getTime();
        const duration = (endTime - startTime) / 1000;
        const bitsLoaded = response.headers.get("Content-Length") * 8;
        const speedMbps = (bitsLoaded / duration / 1024 / 1024).toFixed(2);
        document.getElementById("result").innerText = `Speed: ${speedMbps} Mbps`;
      }
    </script>
  </body>
